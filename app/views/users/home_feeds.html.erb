<div class="row">
  <div class="col-4">
    <div class="card mb-3">
      <div class="card-body text-center">
        <%= gravatar_for current_user %>
        <h1><%= current_user.name %></h1>
        <%= current_user.email %>
      </div>
      <hr>

      <div class="card">

        <div class="card-header">
          <%= form_for(@micropost) do |f| %>
            <div class="form-group">
              <%= f.text_area :content,class: "form-control",placeholder:"Share your toughts..." %>
            </div>

            <div class="mt -3">
              <%= f.submit "Post",class:"btn btn-primary btn-block" %>
            </div>

          <% end %>
        </div>

      </div>


    </div>
  </div>


  <div class="col-8">
    <div class="card">
      <div class="card-body">
          <h2 class = "border-bottom pb-4">Feed</h2>
          <% if @microposts.any? %>
            <ul class="list-unstyled">
              <%= render "microposts/micropost" %>
            </ul>>
          <% else %>
            <div class="text-muted">Nothing to show</div>
          <% end %>
      </div>

    </div>

  </div>
</div>